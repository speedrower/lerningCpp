#include <iostream>

int power(int, int);

int main() {
    int x, w;
    
    std::cout << "This program calculates powers of an integer." << std::endl;
    std::cout << "Enter the base number: ";
    std::cin >> x;
    std::cout << "Enter the exponent: ";
    std::cin >> w;

    if (w < 0) 
        std::cout << "The exponent cannot be negative!" << std::endl;
    else 
        std::cout << x << " raised to the power of " << w 
                  << " is " << power(x, w) << std::endl;

    return 0;
}

int power(int x, int w) {
    
    int x0 = x;
    while (w-- > 1)
        x = x * x0;

    return x;
}
